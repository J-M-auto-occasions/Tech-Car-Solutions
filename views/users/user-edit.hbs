<section class="text-center text-lg-start">


    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-12 mb-8 mb-lg-0">
                <div class="card1 cascading-right"
                    style="background: hsla(0, 0%, 100%, 0.55); backdrop-filter: blur(30px);">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Update your profile info</h2>
                        <p>{{userDetails._id}}</p>
                           <form method="POST" action="/users/{{userDetails._id}}/edit" enctype="multipart/form-data">

                            <div class="form-outline mb-4">
                                <input type="text" class="form-control" name="username" value="{{userDetails.username}}"/>
                                <label class="form-label">User name</label>
                            </div>



                            <div class="form-outline mb-4">
                                <input type="email" name="email" class="form-control" value="{{userDetails.email}}" />
                                <label class="form-label">Email address</label>
                            </div>

                                <div class="form-outline mb-4">
                                    <input type="file" name="image" class="form-control" placeholder="Image">
                                    <input type="file" name="existingImage" hidden value="{{user.currentUser.image}}">
                                    <label class="form-label">Image</label>
                                </div>

                                <button type="submit" class="btn btn-primary btn-block mb-4">Save changes</button>

                                {{#if errorMessage}}
                                <p class="error">{{errorMessage}}</p>
                                {{/if}}
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="{{user.currentUser.username}}" class="w-100 rounded-4 shadow-4" alt="" />
            </div>
        </div>
    </div>

</section>