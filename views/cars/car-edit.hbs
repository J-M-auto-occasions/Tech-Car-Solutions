<h2 class="display-5 text-center mt-5 mb-3">Edit the Car: {{car.model}} {{car.make}}</h2>

<div class="container">

    <form method="POST" action="/cars/{{car._id}}/edit" enctype="multipart/form-data">


        <div class="row">
            <div class="col-md">
                <div class="form-floating">
                    <input type="text" name="make" value="{{car.make}}" class="form-control" placeholder="brand" required>
                    <label class="form-label">Make</label>
                </div>
            </div>
            <div class="col-md">
                <div class="form-floating">
                    <input type="text" name="model" value="{{car.model}}" class="form-control" placeholder="brand" required>
                    <label class="form-label">Model</label>
                </div>
            </div>
        </div>


        <div class="form-floating">
            <input type="file" name="image" class="form-control" placeholder="Image" multiple>
            <input type="file" name="existingImage" hidden value="{{car.image}}">
            <label class="form-label">Image</label>

        </div>

        <div class="form-floating">
            <input type="number" name="price" value="{{car.price}}" class="form-control" placeholder="Price" required>
            <label class="form-label">Price in euros</label>
        </div>

        <div class="form-floating">
            <select name="year" value="{{car.year}}" class="form-select">
                <option value="{{car.year}}">{{car.year}}</option>
                <option value="1991">1991</option>
                <option value="1992">1992</option>
                <option value="1993">1993</option>
                <option value="1994">1994</option>
                <option value="1995">1995</option>
                <option value="1996">1996</option>
                <option value="1997">1997</option>
                <option value="1998">1998</option>
                <option value="1999">1999</option>
                <option value="2000">2000</option>
                <option value="2001">2001</option>
                <option value="2002">2002</option>
                <option value="2003">2003</option>
                <option value="2004">2004</option>
                <option value="2005">2005</option>
                <option value="2006">2006</option>
                <option value="2007">2007</option>
                <option value="2008">2008</option>
                <option value="2009">2009</option>
                <option value="2010">2010</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2018">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
                <option value="2023">2023</option>
            </select>
            <label class="form-label"> Year: </label>
        </div>

        <div class="form-floating">
            <input type="number" min="1" max="200000" name="kmDriven" value="{{car.kmDriven}}" class="form-control"
                placeholder="Kilometers Driven">
            <label class="form-label">Kilometers Driven</label>
        </div>

        <div class="form-floating">
            <select name="transmission" value="{{car.transmission}}" class="form-select">
                <option value="{{car.transmission}}">{{car.transmission}}</option>
                <option value="manual">manual</option>
                <option value="automatic">automatic</option>
            </select>
            <label class="form-label"> Transmission: </label>
        </div>

        <div class="form-floating">
            <select name="power" value="{{car.power}}" class="form-select">
                <option value="{{car.power}}">{{car.power}}</option>
                <option value="60-120">60-120</option>
                <option value="120-220">120-220</option>
                <option value="220-320">220-320</option>
                <option value="320-420">320-420</option>
            </select>
            <label class="form-label"> Horsepower: </label>
        </div>

        <div class="form-floating">
            <input type="text" name="location" value="{{car.location}}" class="form-control" placeholder="Location" required>
            <label class="form-label">Location</label>

        </div>

        <button class="btn btn-primary" type="submit"> Save </button>
    </form>

</div>