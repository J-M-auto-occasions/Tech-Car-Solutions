        <h1>{{currentUser.username}}</h1>
        <p class="fw-boBlder">See your added vehicles below</p>

        {{#if cars}}
        <h2>Your current cars for sale</h2>

        {{#each cars}}
        <h3><a href="/cars/{{this._id}}">{{this.make}} {{this.model}}</a></h3>
