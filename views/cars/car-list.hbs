<h1>Cars for sale:</h1>

{{#each cars}}
<section>

    <h2>{{this.make}} {{this.model}}</h2>
       <img src={{this.image}} alt=""> 
    <p>
        Price: {{this.price}} <br />
        Seller: {{this.seller}} <br />
        Year: {{this.year}} <br />
        KM driven: {{this.kmDriven}} <br />
        Transmission: {{this.transmission}} <br />
        Power: {{this.power}} <br />
        Location: {{this.location}} <br />
        <a href="/cars/{{this._id}}">More details</a>
        <a href="/cars/{{this._id}}/edit">Edit</a>
    </p>

   <form action="/cars/{{_id}}/delete" method="POST">
        <button>Delete</button>
    </form>

</section>

<hr />
{{/each}}